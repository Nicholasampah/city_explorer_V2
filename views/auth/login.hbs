<div class="auth-container">
  <div class="auth-form-container">
    <h1>Login to City Explorer</h1>
    
    {{#if error}}
      <div class="auth-error">
        {{error}}
      </div>
    {{/if}}
    
    <form action="/auth/login" method="POST" class="auth-form">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="{{email}}" required>
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      
      <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>
    
    <div class="auth-links">
      <p>Don't have an account? <a href="/auth/register">Register</a></p>
    </div>
  </div>
  
  <div class="auth-info">
    <div class="auth-info-content">
      <h2>Welcome Back!</h2>
      <p>Log in to explore cities around the world, save your favourites, and discover new places to visit.</p>
      
      <div class="auth-features">
        <div class="auth-feature">
          <i class="icon-globe"></i>
          <h3>Explore Cities</h3>
          <p>Discover interesting facts about cities around the world.</p>
        </div>
        
        <div class="auth-feature">
          <i class="icon-heart"></i>
          <h3>Save favourites</h3>
          <p>Create your personalized collection of favorite cities.</p>
        </div>
        
        <div class="auth-feature">
          <i class="icon-chart"></i>
          <h3>Data Visualization</h3>
          <p>View interactive charts and visualizations of city data.</p>
        </div>
      </div>
    </div>
  </div>
</div>